# define the root logger with two appenders writing to console and file
log4j.rootLogger = INFO, CONSOLE

#define the appender named CONSOLE
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.conversionPattern=%m%n

#set the layout for the appender CONSOLE
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout

# define category
log4j.category.com.fks.reports.service=INFO,ReportsDownlaodLogger
log4j.category.com.fks.reports.jms=INFO,ReportsJMSLogger



# *****  is set to be a RollingFileAppender.  Download Article
log4j.appender.ReportsDownlaodLogger=org.apache.log4j.RollingFileAppender
log4j.appender.ReportsDownlaodLogger.File=${com.sun.aas.instanceRoot}/logs/ReportsService.log
log4j.appender.ReportsDownlaodLogger.MaxFileSize=100KB
log4j.appender.ReportsDownlaodLogger.MaxBackupIndex=50
log4j.appender.ReportsDownlaodLogger.layout=org.apache.log4j.PatternLayout
log4j.appender.ReportsDownlaodLogger.layout.ConversionPattern=PWM_Reports.[%d{DATE}] %p (%C{1}) - %m%n


# *****  is set to be a RollingFileAppender.  Download Article
log4j.appender.ReportsJMSLogger=org.apache.log4j.RollingFileAppender
log4j.appender.ReportsJMSLogger.File=${com.sun.aas.instanceRoot}/logs/ReportsJmsService.log
log4j.appender.ReportsJMSLogger.MaxFileSize=100KB
log4j.appender.ReportsJMSLogger.MaxBackupIndex=50
log4j.appender.ReportsJMSLogger.layout=org.apache.log4j.PatternLayout
log4j.appender.ReportsJMSLogger.layout.ConversionPattern=PWM_Reports.[%d{DATE}] %p (%C{1}) - %m%n

