                                            <td  align="center">
                                                <hr style="border-style: solid; border-color: red;"/>
                                            </td>
                                        </tr>
                                        <tr><td align="left"><br>Select marketing details from dropdown to be used for promotion
                                            </td></tr>
                                    </table>
                                </td>
                            </tr>
                            <tr><td style="height: 15px;" colspan="2"></td></tr>
